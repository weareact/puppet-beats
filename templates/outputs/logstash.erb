output.logstash:
    hosts: <%= @hosts.to_json %>
    index: <%= @index %>
    worker: <%= @worker %>
    loadbalance: <%= @loadbalance %>

<%- if @use_tls == true -%>
    ssl.certificate_authorities: <% @certificate_authorities.each do |cert| %>["<%= cert %>"]<%- end -%>

    ssl.certificate: "<%= @ssl_certificate %>"
    ssl.key: "<%= @ssl_key %>"
<%- elsif @use_tls == true -%>
    tls:
      certificate_authorities: <% @certificate_authorities.each do |cert| %>["<%= cert %>"]<%- end -%>

<%- end -%>

